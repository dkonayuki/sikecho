<div class="teacher" data-id="<%= teacher.id %>">
	<div class="teacher-img">
	<%= link_to teacher do %>
		<%= image_tag(teacher.display_profile_image, class: 'avatar-xs teacher-hovercard-target avatar-round') %>
	<% end %>
	</div>
	<div class="teacher-content">
		<div class="teacher-name">
			<%= teacher.full_name %>
		</div>
		<div class="teacher-info">
			<%= teacher.faculty.name %>&bull;<%= teacher.subjects.count %>
		</div>
	</div>
</div>