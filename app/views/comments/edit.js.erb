$(".media[data-id='" + <%= @comment.id %> + "']").replaceWith("<%=j render partial: 'form', locals: {isNew: false} %>");

$("textarea").autosize();

/*Disable update btn if content is empty or not changed*/
var prevText = "<%= @comment.content %>";

$(".comment-form[data-id='" + <%= @comment.id %> + "'] .comment-btn[value=true]").prop("disabled", true);
$(".comment-form[data-id='" + <%= @comment.id %> + "'] #comment-content").keyup(function() {
  $(".comment-form[data-id='" + <%= @comment.id %> + "'] .comment-btn[value=true]").prop("disabled", ($(this).val() == prevText || $(this).val() == "") ? true : false);
});