<table class="table" id="schedule-table">
	<thead>
		<tr>
			<th class="<%= 'active' if view_option == 0 %>" data-day=0><span><%= t('all') %></span></th>
			<% 1.upto(Period::MAX_DAY).each do |d| %>
			<th class="<%= 'active' if view_option == d %>" data-day="<%= d %>"><span><%= t('date.abbr_day_names')[d] %></span></th>
			<% end %>
		</tr>
	</thead>
	<tbody>
		<%= render partial: 'schedule/schedule_table_tbody', locals: {periods: periods, view_option: view_option} %>
	</tbody>
</table>
