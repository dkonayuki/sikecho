<!-- used in home page -->
<div class="note-item-xs">
	<div class="note-item-inner-xs">
		
	  <div class="note-thumbnail-xs">
	  	<%= link_to note do %>
	  		<%= image_tag('note.png') %>
  		<% end %>
	  </div>
		
	  <div class="note-details-xs">
	    <div class="note-title-xs"><%= link_to "#{note.title}", note %>
				<% if user_signed_in? %>
		    	<% if note.is_favorited?(current_user) %>
		    	<i class="fa fa-star"></i>
		    	<% end %>
	    	<% end %>
    	</div>
	    <div class="note-subject-name-xs">
	    	<%= note.subjects.ordered.first.name %>
	    </div>
	  </div>
	  
	  <div class="note-info-xs">
	  	<div class="note-time-xs">
	  		<%= time_ago_in_words(note.created_at) %><%= t('ago') %>
			</div>
		</div>
			  
	</div>
</div>