<div id="filter-bar">
	<ul id="filter-option">
		<li><span class="glyphicon glyphicon-th"></span></li>
		<li><span class="glyphicon glyphicon-th-list"></span></li>
	</ul>
  <%= link_to new_note_path, class: 'btn btn-default', id:'new-note-btn' do %>
  <span class="glyphicon glyphicon-plus-sign"></span>
	<% end %>

  <%= form_tag subjects_path, method: :get, class: "navbar-form navbar-left col-sm-4", id: 'filter-form' do %>
    <%= text_field_tag :search, params[:search], class: 'form-control', placeholder: 'Search' %>
	<% end %>
	<ul id="filter-menu" class="col-sm-5 hidden-xs">
	<li><%= link_to '自分のノート', filter_notes_path(1) %></li>
  <li><%= link_to '新着ノート', filter_notes_path(3) %></li>
  <li><%= link_to '授業のノート', filter_notes_path(2) %></li>
	</ul>
</div>
<ul>
<% @notes.each do |note| %>
	<li class="note-item col-xs-12 col-sm-11 col-sm-offset-1 col-md-5 col-md-offset-1">
      <div class="note-thumbnail">
      	<span class="helper"></span>
      	<%= link_to image_tag("note_thumbnail.png"), note %>
      </div>
      <div class="note-details">
	      <h4><%= link_to "#{note.title}", note %></h4>
	      <% if @show_subject %>
		      <span class="label label-primary"><%= note.subjects.first.name %></span>
	      <% end %>
	      <% if note.tag_list.include?('試験対策') %>
	      	<span class="label label-warning hidden-xs">試験対策</span>
	      <% end %>
	      <% if note.tag_list.include?('過去問題') %>
	      	<span class="label label-success hidden-xs">過去問題</span>
	      <% end %>
	      <% if note.unread?(@user) %>
	      	<span class="label label-danger">New</span>
	      <% end %>
      </div>
      <div class="note-info">
      	<div class="note-time">
      		<%= time_ago_in_words(note.created_at) %> ago
    		</div>

      	<div class="note-view">
    		<span class="glyphicon glyphicon-eye-open"></span>20
  			</div>
    	</div>
 	</li>
<% end %>
</ul>