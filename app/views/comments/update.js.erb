//replace form with updated comment
$(".comment-form[data-id='" + <%= @comment.id %> + "']").replaceWith("<%=j render @comment %>");

//broadcast the updated comment
<% broadcast "/documents/#{@document.id}" do %>
	$(".media[data-id='" + <%= @comment.id %> + "']").replaceWith("<%=j render @comment %>");
<% end %>