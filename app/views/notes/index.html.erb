<div id="notes" class="col-md-12 col-xs-12">
	<div id="filter-bar">
		<ul id="filter-option">
			<li><span class="glyphicon glyphicon-th"></span></li>
			<li><span class="glyphicon glyphicon-th-list"></span></li>
		</ul>
	  <%= link_to new_note_path, class: 'btn btn-default', id:'new-note-btn' do %>
	  <span class="glyphicon glyphicon-plus-sign"></span>
		<% end %>
	
	  <%= form_tag notes_path, method: :get, class: "navbar-form navbar-left col-sm-4", id: 'filter-form', remote: true do %>
	    <%= text_field_tag :search, params[:search], class: 'form-control', placeholder: 'Search' %>
    	<% if @old_filter %>
	    
	    <% end %>
		<% end %>
		<ul id="filter-menu" class="col-sm-5 hidden-xs">
		<li><%= link_to '自分のノート', notes_path(filter: 1), remote: true %></li>
		<li><%= link_to '授業のノート', notes_path(filter: 2), remote: true %></li>
	  <li><%= link_to '新着ノート', notes_path(filter: 3), remote: true %></li>
		</ul>
	</div>
	<div id="notes-list">
		<%= render 'layouts/list_notes' %>
	</div>
</div>