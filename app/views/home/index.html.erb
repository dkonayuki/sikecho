<div id="home" class="row">
	
	<div class="col-xs-12 col-sm-9">
		<div id="activities">
			<% @activities.each do |activity| %>
				<% case activity.trackable_type 
				when 'Note' %>
			    <%= render_activity activity, layout: 'layouts/activity_note', locals: {note: activity.trackable} %>
		    <% when 'Subject' %>
			    <%= render_activity activity, layout: 'layouts/activity_subject' %>
		    <% end %>
			<% end %>
		</div>
	</div>
	
	<div class="hidden-xs col-sm-3">
		<div id="widgets">
			<%= render 'users/user_profile_card', user: @user %>
		</div>
	</div>
	
</div>