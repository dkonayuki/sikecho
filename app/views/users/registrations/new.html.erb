<div id="signup-page" class="clear">
	<nav class="navbar navbar-default" role="navigation" id="nav-bar">
	  <div class="navbar-header">
	    <%= link_to image_tag("logo.png"), home_path, class: 'navbar-brand', id: 'logo' %>
	  </div>
	  <%= link_to "ログイン", new_user_session_path, class: 'btn btn-sm btn-orange navbar-right hidden-xs', id: 'login-btn' %>
	</nav>
	<h2>アカウントを作成します</h2>
	<div id="signup-form-wrapper">
		<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
		  <%= devise_error_messages! %>
		  <label>ユーザー名:</label>
			<%= f.text_field :username, class: 'form-control' %>
			<br />

			<label>パスワード:</label>
			<%= f.password_field :password, class: 'form-control', autocomplete: "off" %>
			<br />

			<label>パスワード確認:</label>
			<%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "off" %>
			<br />

			<label>メール:</label>
			<%= f.email_field :email, class: 'form-control' %>
			<br />

			<label>大学:</label>
			<%= select_tag :university, options_from_collection_for_select(@universities, "id", "name"), class: 'form-control selectpicker show-tick', data: {width: 'auto'} %>
			<%= f.submit '登録', class: 'btn btn-success btn-block', id: 'signup-btn' %>
		<% end %>
	</div>
</div>
<script>
	$(document).ready(function() {
		$('.selectpicker').selectpicker();
	});
</script>