<div class="hidden">
<h1>Listing faculties</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Website</th>
      <th>University</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @faculties.each do |faculty| %>
      <tr>
        <td><%= faculty.name %></td>
        <td><%= faculty.website %></td>
        <td><%= faculty.university_id %></td>
        <td><%= link_to 'Show', faculty %></td>
        <td><%= link_to 'Edit', edit_faculty_path(faculty) %></td>
        <td><%= link_to 'Destroy', faculty, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Faculty', new_university_faculty_path(@university) %>
</div>
<div id="faculty-list">

	<% @faculties.each do |faculty| %>
	 <div class="faculty-item">
	 	<div class="faculty-item-content">
		 	<div class="faculty-name"><%= faculty.name %></div>
		 	<div class="faculty-courses-list">
		 		<ul>
			 		<% faculty.courses.each do |course| %>
			 		<li><%= link_to course.name, course_subjects_path(course) %></li>
			 		<% end %>	 			
		 		</ul>
		 	</div>
	 	</div>
	 </div>
	<% end %>
	
</div>
