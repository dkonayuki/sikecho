<% if @show_more %>
	//wait 1s for loading img show up
	<% sleep 1 %>
	$("#subjects-list #loading").remove();
	$('#subjects-list').append("<%=j render collection: @subjects, partial: 'subject_line', as: :subject %>");
<% else %>
	$('#subjects-list').html("<%=j render(collection: @subjects, partial: 'subject_line', as: :subject) || content_tag(:div, t('subject_not_found'), class: 'message') %>");
<% end %>

//update pagination
$(".hidden-pagination").html("<%=j paginate @subjects %>");
