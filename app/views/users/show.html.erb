<div id="profile">
	<div class="skc-box">
		<div class="skc-box-content">
			<div class="skc-box-thumbnail">
				<%= image_tag("user.png")  %>
			</div>
			<div class="skc-box-desc">
				<h4><%= @user.username %></h4>
				<hr />
				<p>
					<strong>メール:</strong>
					<%= @user.email %>
				</p>
				<p>
					<strong>学校:</strong>
					<%= @user.university.name %>
				</p>
				<% if @user.faculty %>
				<p>
					<strong>学部・研究科:</strong>
					<%= @user.faculty.name %>
				</p>
				<% end %>
				<% if @user.course %>
				<p>
					<strong>学科・コース:</strong>
					<%= @user.course.name %>
				</p>
				<% end %>
				<hr />
				<p>
					<% if @user == User.find_by_id(session[:user_id]) %>
						<strong>時間割表:</strong>
						<%= link_to image_tag("calendar.jpeg", class: 'calendar'), schedule_path %>
		      <% end %>
				</p>
			</div>
		  <% if @user == User.find_by_id(session[:user_id]) %>
	  		<div class="skc-box-menu">
			  	<%= link_to edit_user_path(@user) do %>
			  	<span class="glyphicon glyphicon-pencil"></span>
			  	<% end %>
				</div>
		  <% end %>
		</div>
	</div>
</div>
