<% if @layout == :all %>
	<%= render(partial: 'note', collection: @notes, locals: {show_subject: true}) || t('note_not_found') %>
<% else %>
	<% @notes_by_subject.keys.each do |subject| %>
	<div class="">
		
		<span><%= subject.name %></span>
		<%= render(partial: 'note_line', collection: @notes_by_subject[subject], as: :note, locals: {show_subject: false}) || t('note_not_found') %>
	</div>
	<% end %>
<% end %>