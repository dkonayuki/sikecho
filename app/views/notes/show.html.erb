<div id="show-note">
	<div class="panel panel-danger">
	<!-- Default panel contents -->
	  <div class="panel-heading text-center"><h4><%= @note.title %></h4></div>
	  <div class="panel-body">
	  	<dl class="dl-horizontal">
	      <dt>内容:</dt>
	      <dd><%= @note.content %></dd>
	      <dt>科目:</dt>
	      <dd><%= link_to @note.subjects.first.name, @note.subjects.first %></dd>
	      <dt>ユーザー:</dt>
	      <dd><%= link_to @note.user.username, @note.user %></dd>
	      <dt>作成日:</dt>
	      <dd><%= @note.created_at %></dd>
	      <hr />
	      <dt>資料：</dt>
	      <% if @note.documents.empty? %>
	      	<dd>まだ資料がありません。</dd>
	      <% else %>
		      <% @note.documents.each do |document| %>
					  <dd><%= link_to "#{document.name}", download_path(document.id) %></dd>
					<% end %>
				<% end %>
    	</dl>
    	<hr />
			<%= text_area_tag 'tags', :tags, id: 'tag-input' %>
    	<!-- <% if @editable %>
    		  <%= link_to edit_note_path(@note.id), class: 'btn btn-primary', id: 'note-edit-btn' do %>
    		  <i class="icon-brush"></i>
    		  <% end %>    	
    	<% end %> -->
    		  <%= link_to 'もどる', :back, class: 'btn btn-default col-md-2 col-md-offset-5' %>
	  </div>
	</div>
</div>
<script>
	$('#tag-input').tagsinput({
		tagClass: function(item) {
	    switch (item.type) {
	      case 'normal' 	: return 'label label-info';
	      case 'year'  		: return 'label label-warning';
	      case 'special' 	: return 'label label-danger';
	    }
	  },
	  itemValue: 'value',
	  itemText: 'text',
	  disable: 'true'
	});
	<% @tags.each do |tag| %>
		<% if tag.to_i === 365 %>
			$('#tag-input').tagsinput('add', { "value": <%= tag %>, "text": "通年", "type": "year" } );
		<% elsif tag.to_i === 0 %>
			$('#tag-input').tagsinput('add', { "value": <%= tag %>, "text": "集中講義", "type": "special" } );
		<% else %>
			$('#tag-input').tagsinput('add', { "value": <%= tag %>, "text": "<%= tag %>回目", "type": "normal" } );
		<% end %>
	<% end %>
</script>