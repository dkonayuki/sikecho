<div id="user-edit">
<h2>Sign up</h2>
	<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
	  <%= devise_error_messages! %>
	  <div class="skc-box">
			<div class="skc-box-content">
				<div class="skc-box-thumbnail">
					<%= image_tag("user.png")  %>
				</div>
				<div class="skc-box-desc">
					<%= f.text_field :username, class: 'form-control', placeholder: 'ユーザー名:' %>
					<hr />
					<p>
						<strong>パスワード:</strong>
						<%= f.password_field :password, class: 'form-control form-control-inline', autocomplete: "off" %>
					</p>
					<p>
						<strong>パスワード確認:</strong>
						<%= f.password_field :password_confirmation, class: 'form-control form-control-inline', autocomplete: "off" %>
					</p>
					<p>
						<strong>メール:</strong>
						<%= f.email_field :email, class: 'form-control form-control-inline' %>
					</p>
					<p>
						<strong>大学:</strong>
						<%= select_tag :university, options_from_collection_for_select(@universities, "id", "name"), class: 'form-control selectpicker show-tick', data: {width: 'auto'} %>
					</p>
					<hr />
				</div>
				<%= f.submit '登録', class: 'btn btn-success col-sm-2 col-sm-offset-5 col-xs-12 col-xs-offset-0'%>
				<br />
			</div>
		</div>
	<% end %>
</div>
<script>
	$(document).ready(function() {
		$('.selectpicker').selectpicker();
	});
</script>