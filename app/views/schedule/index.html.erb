<div id="schedule">
	<div id="schedule-menu" class="col-sm-4 col-xs-12">
		<div id="filter-bar">
			<%= form_tag schedule_path, method: :get, class: "navbar-form navbar-left", id: 'filter-form' do %>
		    <%= text_field_tag :search, params[:search], class: 'form-control', placeholder: 'ライブ検索', value:"#{@search}", autocorrect: "off", autocapitalize: "off" %>
			<% end %>
		</div>

		<div id="schedule-sub-list">
			<%= render 'list_subjects_on_schedule'%>
		</div>
	</div>
	<div id="schedule-content" class="col-sm-8 col-xs-12">
		<%= render 'schedule/schedule' %>
	</div>
</div>
