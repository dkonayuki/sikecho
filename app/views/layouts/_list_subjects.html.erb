<ul>
<% @subjects.each do |subject| %>
	<%= link_to subject do %>
	<li class="subject-item"> 
      <div class="caption text-center">
        <h4><%= subject.name %></h4>
      </div>
      
      <div class="details">
	      <dt>時間:</dt>
	      <dd><%= subject.time_name %></dd>
	      <dd><%= subject.day_name %></dd>
	      <dt>教師:</dt>
	      <dd>
	      		<%= subject.teachers.first.last_name_kanji %>
	      		<%= subject.teachers.first.first_name_kanji %>
	      </dd>
			</div>
 	</li>
 	<% end %>
<% end %>
</ul>