<div id="profile" class="col-xs-12">
	<div class="panel panel-primary">
	<!-- Default panel contents -->
	  <div class="panel-heading text-center"><h4>Profile</h4></div>
	  <div class="panel-body">
	  	<dl class="dl-horizontal">
	      <dt>ユーザー名:</dt>
	      <dd><%= @user.username %></dd>
	      <dt>メール:</dt>
	      <dd><%= @user.email %></dd>
	      <dt>学校:</dt>
	      <dd><%= @user.university.name %></dd>
	      <dt>学科・コース:</dt>
	      <dd><%= @user.faculty.name %></dd>
	      <% if @user == User.find_by_id(session[:user_id]) %>
	      <hr />
	      <dt>時間割表:</dt>
	      <dd><%= link_to image_tag("calendar.jpeg", class: 'calendar'), schedule_path %></dd>
	      <% end %>
    	</dl>
    		  <% if @user == User.find_by_id(session[:user_id]) %>
    		  <div class="row text-center">
    		  	<%= link_to '編集', edit_user_path(@user), class: 'btn btn-success' %>
  		  	</div>
    		  <% end %>
	  </div>
	</div>
</div>