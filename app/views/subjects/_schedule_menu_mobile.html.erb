<% if @user.current_subjects.include?(@subject) %>
	<%= link_to schedule_destroy_path(subject_id: @subject.id), method: :delete do %>
		<%= image_tag('lecture_color.png') %>
		<%= t('cancel_subject_registered') %>
	<% end %>
<% else %>
	<%= link_to schedule_create_path(subject_id: @subject.id), method: :post do %>
		<%= image_tag('lecture_color.png') %>
		<%= t('register_subject') %>
	<% end %>
<% end %>
