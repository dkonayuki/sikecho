<div class="author">
	<div class="author-img">
	<%= link_to user do %>
		<%= image_tag(user.display_comment_avatar, class: 'avatar-xs author-hovercard-target avatar-round') %>
	<% end %>
	</div>
	<div class="author-content">
		<div class="author-name">
			<%= user.username %>
		</div>
		<div class="author-info">
			<%= l date, format: :short %>
		</div>
	</div>
</div>