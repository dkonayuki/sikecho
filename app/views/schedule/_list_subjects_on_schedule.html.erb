		<%= link_to_previous_page @subjects, '', remote: true, params: {search: @search}, class: 'previous-btn' %>
		<%= link_to_next_page @subjects, '', remote: true, params: {search: @search}, class: 'next-btn' %>
		
<ul data-page="<%= @page %>">
<% @subjects.each do |subject| %>
	<li class="subject-schedule-item subject-draggable <%= @user.current_subjects.include?(subject)? 'active' : ''  %>" data-id="<%= subject.id %>">
      
		<div class="subject-schedule-img">
		<%= link_to subject do %>
			<%= image_tag(subject.display_picture_small) %>
		<% end %>
		</div>
		<div class="subject-schedule-content">
			<div class="subject-schedule-name">
				<%= subject.name %>
			</div>
  		<div class="subject-schedule-info">
  			<%= subject.teachers.first.full_name %>
  			&bull;
  			<%= subject.year %>
			</div>
      <div class="subject-add">
      	<% if @user.current_subjects.include?(subject) %>
      		<%= link_to schedule_destroy_path(subject_id: subject.id, search: @search, page: @page), method: :delete, remote: true do %>
	      		<span class="glyphicon glyphicon-remove"></span>
	      	<% end %>
      	<% else %>
	      	<%= link_to schedule_create_path(subject_id: subject.id, search: @search, page: @page), method: :post, remote: true do %>
	      		<span class="glyphicon glyphicon-plus"></span>
	      	<% end %>
      	<% end %>
    	</div>
		</div>
 	</li>
<% end %>
</ul>
<script>
  $(".subject-draggable").draggable({
    revert: true,
    revertDuration: 0,
    stack: ".subject-draggable"
  });
</script>