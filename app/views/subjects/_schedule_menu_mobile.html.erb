<% if current_user.is_registered?(subject) %>
	<%= link_to '', data: {method: :delete, href: schedule_destroy_path(subject_id: subject.id)} do %>
		<%= image_tag('lecture_color.png') %>
		<%= t('cancel_subject_registered') %>
	<% end %>
<% else %>
	<%= link_to '', data: {method: :post, href: schedule_create_path(subject_id: subject.id)} do %>
		<%= image_tag('lecture_color.png') %>
		<%= t('register_subject') %>
	<% end %>
<% end %>
