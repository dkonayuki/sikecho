<table class="table table-bordered">
	<tr class="hidden-xs">
		<th></th>
		<% (0..5).each do | d |%>
		<th><%= day_names(d) %></th>
		<% end %>
	</tr>
	<tr class="visible-xs">
		<th></th>
		<% (0..5).each do | d |%>
		<th><%= day_names_short(d) %></th>
		<% end %>
	</tr>
	<% (0..6).each do | t | %>
	<tr>
		<td class="period hidden-xs"><%= time_names(t) %></td>
		<td class="period visible-xs"><%= time_names_short(t) %></td>
		<% (0..5).each do | d | %>
			<% if @periods[[d, t]].blank? %>
				<td class="cell"></td>
			<% else %>
				<td class="cell">
					<ul>
						<% @periods[[d, t]].each do | subject | %>
						<li><%= link_to subject.name, subject %></li>
						<% end %>
					</ul>					
				</td>
			<% end %>
		<% end %>
	</tr>
	<% end %>
</table>
<script>
	$("#schedule-table").droppable({
		accept: ".subject-draggable",
    drop: function( event, ui ) {
      $.ajax ({
      	url: "/schedule/",
      	type: "post",
      	data: {subject: ui.draggable[0].getAttribute("data-id"), page: "<%= @page %>", search: "<%= @search %>" },
      	dataType: "script",
      });
    },
    over: function( event, ui ) {
    	
    }
	});
</script>
